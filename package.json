{
  "name": "bibliotheca",
  "version": "1.0.0",
  "description": "",
  "types": "./dist/cjs/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "files": [
    "dist/**/*",
    "bundled/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "dev": "vite docs",
    "size": "size-limit",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:bundled",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:bundled": "tsc -p ./tsconfig.bundled.json",
    "prepack": "npm run build",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studio-freight/bibliotheca.git"
  },
  "keywords": [],
  "author": "@studio-freight",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/studio-freight/bibliotheca/issues"
  },
  "homepage": "https://github.com/studio-freight/bibliotheca#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.8.3",
    "semantic-release": "^20.1.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "size-limit": [
    {
      "limit": "3 kB",
      "path": "dist/index.js"
    },
    {
      "limit": "2 kB",
      "path": "dist/index.mjs"
    }
  ]
}
